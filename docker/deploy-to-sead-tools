#!/bin/bash

SOURCE_DIR=$(realpath $(dirname "$(realpath "$0")"))
TARGET_DIR=/home/sead/sead-tools/sead_shape_shifter

echo "Copying files from $SOURCE_DIR to $TARGET_DIR..."
echo "  ignored: docker-compose.yml (copy manually if needed)"

for file in \
    Dockerfile \
    Makefile \
    BUILD_SCRIPT_GUIDE.md \
    build.sh \
    README.md \
    .dockerignore
do
    cp -f "$SOURCE_DIR/$file" "$TARGET_DIR/"
    chown sead:www-data "$TARGET_DIR/$file"
    echo "  copied: $file"
done
echo "âœ“ All files copied successfully."

