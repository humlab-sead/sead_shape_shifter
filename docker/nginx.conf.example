# ==============================================================================
# Nginx Configuration for Shape Shifter
# ==============================================================================
# This is an example nginx configuration for deploying Shape Shifter behind
# a reverse proxy with SSL/TLS termination.
#
# Place this in: /etc/nginx/sites-available/shape-shifter
# Enable with: sudo ln -s /etc/nginx/sites-available/shape-shifter /etc/nginx/sites-enabled/
# Test config: sudo nginx -t
# Reload: sudo systemctl reload nginx
# ==============================================================================

# Redirect HTTP to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name shapeshifter.example.com;

    # ACME challenge for Let's Encrypt
    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }

    # Redirect all other HTTP traffic to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS Server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name shapeshifter.example.com;

    # SSL Configuration
    ssl_certificate /etc/letsencrypt/live/shapeshifter.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/shapeshifter.example.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/shapeshifter.example.com/chain.pem;

    # SSL Settings (Mozilla Intermediate Configuration)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_stapling on;
    ssl_stapling_verify on;

    # Security Headers
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Logging
    access_log /var/log/nginx/shape-shifter-access.log;
    error_log /var/log/nginx/shape-shifter-error.log;

    # Client Upload Size (adjust for your needs)
    client_max_body_size 100M;

    # Timeouts
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;

    # Proxy to Shape Shifter Application
    location / {
        proxy_pass http://localhost:8012;
        
        # Proxy Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        
        # WebSocket Support (if needed)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Disable buffering for SSE/streaming responses
        proxy_buffering off;
        
        # Cache control
        proxy_cache_bypass $http_upgrade;
    }

    # Static Assets Caching (optional, already handled by FastAPI)
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        proxy_pass http://localhost:8012;
        proxy_set_header Host $host;
        
        # Cache static assets
        expires 1y;
        add_header Cache-Control "public, immutable";
        
        # Compression
        gzip on;
        gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript image/svg+xml;
        gzip_vary on;
    }

    # API Endpoints (no caching)
    location /api/ {
        proxy_pass http://localhost:8012;
        
        # Proxy Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # No caching for API
        add_header Cache-Control "no-store, no-cache, must-revalidate";
        expires 0;
    }

    # Health Check Endpoint
    location /health {
        proxy_pass http://localhost:8012;
        access_log off;
    }
}

