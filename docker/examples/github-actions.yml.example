# ==============================================================================
# GitHub Actions Workflow for Docker Build and Push
# ==============================================================================
# This is an example workflow for building and pushing Docker images to a
# container registry. Customize for your CI/CD needs.
#
# To use this workflow:
# 1. Copy this file to .github/workflows/docker-build.yml
# 2. Configure the repository secrets:
#    - DOCKER_USERNAME: Docker Hub username (or registry username)
#    - DOCKER_PASSWORD: Docker Hub password/token (or registry token)
# 3. Customize the registry and image name as needed
# 4. Adjust USER_UID and USER_GID if needed (defaults to 1000:1000)
# ==============================================================================

name: Build and Push Docker Image

on:
  push:
    branches:
      - main
      - develop
    tags:
      - 'v*.*.*'
  pull_request:
    branches:
      - main

env:
  REGISTRY: docker.io  # Or use ghcr.io for GitHub Container Registry
  IMAGE_NAME: ${{ github.repository_owner }}/shape-shifter

jobs:
  build:
    name: Build Docker Image
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Extract metadata (tags, labels)
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}
          tags: |
            type=ref,event=branch
            type=ref,event=pr
            type=semver,pattern={{version}}
            type=semver,pattern={{major}}.{{minor}}
            type=semver,pattern={{major}}
            type=sha,prefix={{branch}}-
            type=raw,value=latest,enable={{is_default_branch}}

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./docker/Dockerfile
          push: ${{ github.event_name != 'pull_request' }}
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max
          platforms: linux/amd64,linux/arm64
          build-args: |
            SOURCE=github
            GIT_REF=${{ github.ref_name }}
            CACHE_BUST=${{ github.sha }}
            USER_UID=1000
            USER_GID=1000

      - name: Image digest
        run: echo ${{ steps.meta.outputs.digest }}

  # Optional: Deploy to staging/production
  deploy:
    name: Deploy to Production
    needs: build
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'
    
    steps:
      - name: Deploy via SSH
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.DEPLOY_HOST }}
          username: ${{ secrets.DEPLOY_USER }}
          key: ${{ secrets.DEPLOY_SSH_KEY }}
          script: |
            cd /opt/shape-shifter
            docker compose pull
            docker compose up -d
            # Wait for health check
            timeout 60 bash -c 'until curl -sf http://localhost:8012/api/v1/health >/dev/null 2>&1; do sleep 2; done'
            echo "Deployment successful - application is healthy"

# ==============================================================================
# GitHub Container Registry Alternative
# ==============================================================================
# To use GitHub Container Registry (ghcr.io) instead of Docker Hub:
# 1. Change env.REGISTRY to ghcr.io
# 2. Use these login credentials:
#    username: ${{ github.actor }}
#    password: ${{ secrets.GITHUB_TOKEN }}
# 3. No additional secrets needed - GITHUB_TOKEN is automatic
#
# Build Args Reference:
# - SOURCE: 'github' (build from GitHub) or 'workdir' (build from context)
# - GIT_REF: Branch, tag, or commit to build from (when SOURCE=github)
# - CACHE_BUST: Commit SHA to invalidate Docker cache on new commits
# - USER_UID: User ID for container (default: 1000)
# - USER_GID: Group ID for container (default: 1000)
# - VITE_API_BASE_URL: Frontend API base URL (default: "" for same-origin)
# - VITE_ENV: Frontend environment (default: "production")
#
# For custom UID/GID (e.g., for specific deployment user):
#   build-args: |
#     USER_UID=1002
#     USER_GID=33
#     SOURCE=github
#     GIT_REF=${{ github.ref_name }}
#     CACHE_BUST=${{ github.sha }}
