{
  "$defs": {
    "ProjectMetadata": {
      "description": "Metadata about a project.",
      "properties": {
        "name": {
          "description": "Project name",
          "title": "Name",
          "type": "string"
        },
        "type": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": "shapeshifter-project",
          "description": "Project type identifier",
          "title": "Type"
        },
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Project description",
          "title": "Description"
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Project version",
          "title": "Version"
        },
        "file_path": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "File path if loaded from file",
          "title": "File Path"
        },
        "entity_count": {
          "description": "Number of entities",
          "title": "Entity Count",
          "type": "integer"
        },
        "created_at": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "description": "Creation timestamp (Unix timestamp)",
          "title": "Created At"
        },
        "modified_at": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "description": "Last modification timestamp (Unix timestamp)",
          "title": "Modified At"
        },
        "is_valid": {
          "default": true,
          "description": "Whether project is valid",
          "title": "Is Valid",
          "type": "boolean"
        },
        "default_entity": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Default source entity name",
          "title": "Default Entity"
        }
      },
      "required": [
        "name",
        "entity_count"
      ],
      "title": "ProjectMetadata",
      "type": "object"
    }
  },
  "description": "Schema for Shape Shifter project configuration files",
  "properties": {
    "entities": {
      "additionalProperties": {
        "additionalProperties": true,
        "type": "object"
      },
      "description": "Map of entity name to entity (raw dicts)",
      "title": "Entities",
      "type": "object"
    },
    "options": {
      "additionalProperties": true,
      "description": "Global options",
      "title": "Options",
      "type": "object"
    },
    "task_list": {
      "anyOf": [
        {
          "additionalProperties": true,
          "type": "object"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Task list for entity progress tracking",
      "title": "Task List"
    },
    "metadata": {
      "anyOf": [
        {
          "$ref": "#/$defs/ProjectMetadata"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Project metadata"
    }
  },
  "title": "ShapeShifter Project Configuration",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#"
}
